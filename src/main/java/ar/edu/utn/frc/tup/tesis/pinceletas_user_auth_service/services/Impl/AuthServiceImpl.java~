package ar.edu.utn.frc.tup.tesis.pinceletas_user_auth_service.services.Impl;

import ar.edu.utn.frc.tup.tesis.pinceletas_user_auth_service.Rabbit.NotificacionEventService;
import ar.edu.utn.frc.tup.tesis.pinceletas_user_auth_service.dto.auth.*;
import ar.edu.utn.frc.tup.tesis.pinceletas_user_auth_service.model.UserEntity;
import ar.edu.utn.frc.tup.tesis.pinceletas_user_auth_service.services.AuthService;
import ar.edu.utn.frc.tup.tesis.pinceletas_user_auth_service.services.PasswordResetService;
import ar.edu.utn.frc.tup.tesis.pinceletas_user_auth_service.services.UserService;
import ar.edu.utn.frc.tup.tesis.pinceletas.common.security.JwtService;
import lombok.RequiredArgsConstructor;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.stereotype.Service;

/**
 * Implementaci칩n del servicio de autenticaci칩n.
 * Gestiona el registro, login tradicional y con Firebase, y procesos de recuperaci칩n de contrase침a.
 * Coordina entre UserService, JwtService y PasswordResetService para completar las operaciones.
 */
@Service
@RequiredArgsConstructor
public class AuthServiceImpl implements AuthService{
    /** Servicio para gesti칩n de usuarios y operaciones CRUD. */
    private final UserService userService;
    /** Servicio para generaci칩n y validaci칩n de tokens JWT. */
    private final JwtService jwtService;
    /** Codificador de contrase침as para verificaci칩n y hashing. */
    private final PasswordEncoder passwordEncoder;
    /** Servicio para gesti칩n de tokens de recuperaci칩n de contrase침a. */
    private final PasswordResetService passwordResetService;


    private final NotificacionEventService notificacionEventService; // <- Nuevo


    /**
     * Registra un nuevo usuario con credenciales tradicionales.
     * Crea el usuario en la base de datos y genera un token JWT para autenticaci칩n inmediata.
     *
     * @param request Datos del usuario a registrar.
     * @return AuthResponse con el token JWT generado para autenticaci칩n.
     * @throws RuntimeException si el email ya est치 registrado o las contrase침as no coinciden.
     */
    @Override
    public AuthResponse register(RegisterUserRequest request) {
        UserEntity user = userService.register(request);

        // 游댒 Para el ADMIN - Nuevo registro
        notificacionEventService.enviarNotificacionNuevoRegistro(
                user.getEmail(),
                user.getId(),
                user.getNombre() + " " + user.getApellido()
        );

        // 游댒 Para el USUARIO - Bienvenida por registro
        notificacionEventService.enviarNotificacionBienvenidaRegistro(
                user.getEmail(),
                user.getId(),
                user.getNombre() + " " + user.getApellido()
        );

        String token = jwtService.generateToken(user.getEmail(), user.getRole().name());
        return new AuthResponse(token);
    }

    /**
     * Autentica un usuario existente con credenciales tradicionales.
     * Verifica que el usuario exista, est칠 activo y las credenciales sean correctas.
     *
     * @param request Credenciales de login (email y contrase침a).
     * @return AuthResponse con el token JWT generado.
     * @throws RuntimeException si el usuario no existe, est치 desactivado o las credenciales son inv치lidas.
     */
    @Override
    public AuthResponse login(LoginRequest request) {
        UserEntity user = userService.findByEmail(request.getEmail());

        if (!user.isActivo()) {
            throw new RuntimeException("La cuenta est치 desactivada");
        }

        if (!passwordEncoder.matches(request.getPassword(), user.getPassword())) {
            throw new RuntimeException("Credenciales inv치lidas");
        }

        // 游댒 Para TODOS los usuarios - Inicio de sesi칩n
        notificacionEventService.enviarNotificacionInicioSesion(
                user.getEmail(),
                user.getId(),
                user.getNombre() + " " + user.getApellido()
        );

        String token = jwtService.generateToken(user.getEmail(), user.getRole().name());
        return new AuthResponse(token);
    }

    /**
     * Inicia el proceso de recuperaci칩n de contrase침a para un usuario.
     * Delega la operaci칩n al servicio especializado de recuperaci칩n de contrase침a.
     *
     * @param request Solicitud con el email del usuario.
     * @throws RuntimeException si el email no existe o la cuenta est치 desactivada.
     */
    @Override
    public void forgotPassword(ForgotPasswordRequest request) {
        passwordResetService.initiatePasswordReset(request.getEmail());
    }

    /**
     * Restablece la contrase침a de un usuario usando un token de recuperaci칩n v치lido.
     * Valida el token y establece la nueva contrase침a en el sistema.
     *
     * @param request Solicitud con el token y nueva contrase침a.
     * @throws RuntimeException si el token es inv치lido, expir칩 o las contrase침as no coinciden.
     */
    @Override
    public void resetPassword(ResetPasswordRequest request) {
        passwordResetService.resetPassword(
                request.getToken(),
                request.getNewPassword(),
                request.getConfirmNewPassword()
        );
    }

    /**
     * Registra un nuevo usuario usando autenticaci칩n con Firebase.
     * Verifica el token de Firebase, extrae la informaci칩n del usuario y lo registra en el sistema.
     *
     * @param request Solicitud con token de Firebase y datos adicionales opcionales.
     * @return AuthResponse con el token JWT del sistema.
     * @throws RuntimeException si el token de Firebase es inv치lido, el email ya est치 registrado,
     *         o hay errores en la comunicaci칩n con Firebase.
     */
    @Override
    public AuthResponse registerWithFirebase(FirebaseRegisterRequest request) {
        try {
            com.google.firebase.auth.FirebaseToken decoded =
                    com.google.firebase.auth.FirebaseAuth.getInstance()
                            .verifyIdToken(request.getFirebaseIdToken());

            String uid = decoded.getUid();
            String email = decoded.getEmail();
            String name = (String) decoded.getClaims().getOrDefault("name", email);

            if (userService.existsByEmail(email)) {
                throw new RuntimeException("El email ya est치 registrado");
            }

            UserEntity user = userService.registerWithFirebase(
                    uid, email, name, "firebase",
                    request.getFirstName(), request.getLastName(), request.getPhoneNumber()
            );

            // 游댒 SOLO para ADMIN - Nuevo registro con Firebase
            notificacionEventService.enviarNotificacionNuevoRegistro(
                    user.getEmail(),
                    user.getId(),
                    user.getDisplayName()
            );

            String token = jwtService.generateToken(user.getEmail(), user.getRole().name());
            return new AuthResponse(token);
        } catch (Exception e) {
            throw new RuntimeException("Error en el registro con Firebase: " + e.getMessage());
        }
    }


    /**
     * Autentica un usuario existente usando autenticaci칩n con Firebase.
     * Verifica el token de Firebase y genera un JWT del sistema para el usuario.
     * Si el usuario no existe, lo crea autom치ticamente (upsert operation).
     *
     * @param request Solicitud con token de Firebase.
     * @return AuthResponse con el token JWT del sistema.
     * @throws RuntimeException si el token de Firebase es inv치lido, la cuenta est치 desactivada,
     *         o hay errores en la comunicaci칩n con Firebase.
     */
    @Override
    public AuthResponse loginWithFirebase(FirebaseLoginRequest request) {
        try {
            com.google.firebase.auth.FirebaseToken decoded =
                    com.google.firebase.auth.FirebaseAuth.getInstance()
                            .verifyIdToken(request.getFirebaseIdToken());

            String uid = decoded.getUid();
            String email = decoded.getEmail();
            String name = (String) decoded.getClaims().getOrDefault("name", email);

            UserEntity user = userService.upsertFirebaseUser(uid, email, name, "firebase");

            if (!user.isActivo()) {
                throw new RuntimeException("La cuenta est치 desactivada");
            }

            // 游댒 Para el USUARIO - Inicio de sesi칩n con Firebase
            notificacionEventService.enviarNotificacionInicioSesionFirebase(
                    user.getEmail(),
                    user.getId(),
                    user.getDisplayName() != null ? user.getDisplayName() : user.getNombre() + " " + user.getApellido()
            );

            // 游댒 NUEVO: Para el ADMIN - Aviso de inicio de sesi칩n con Firebase
            notificacionEventService.enviarNotificacionAdminInicioSesionFirebase(
                    user.getEmail(),
                    user.getId(),
                    user.getDisplayName() != null ? user.getDisplayName() : user.getNombre() + " " + user.getApellido()
            );

            String token = jwtService.generateToken(user.getEmail(), user.getRole().name());
            return new AuthResponse(token);
        } catch (Exception e) {
            throw new RuntimeException("Error en el login con Firebase: " + e.getMessage());
        }
    }
}
